<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:text="간격"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_margin="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:background="#708090" />

        <RadioGroup
            android:id="@+id/radio_group_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/radio_5min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="5분" />

            <RadioButton
                android:id="@+id/radio_10min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10분"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/radio_15min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15분"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/radio_30min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30분"
                android:layout_marginBottom="10dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radio_group_term"
            android:layout_alignStart="@+id/radio_group_term"
            android:layout_below="@+id/radio_group_term"
            android:layout_gravity="left"
            android:layout_marginTop="21dp"
            android:text="반복"
            android:textColor="#000000"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#708090" />

        <RadioGroup
            android:id="@+id/radio_group_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView6"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/radio_3bun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="3번" />

            <RadioButton
                android:id="@+id/radio_5bun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="5번" />

            <RadioButton
                android:id="@+id/radio_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="계속" />


        </RadioGroup>

        <Button
            android:id="@+id/btn_term_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/radio_group_repeat"
            android:layout_alignRight="@+id/radio_group_repeat"
            android:layout_below="@+id/radio_group_repeat"
            android:text="취소" />

        <Button
            android:id="@+id/btn_term_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_term_can"
            android:layout_toLeftOf="@+id/btn_term_can"
            android:layout_toStartOf="@+id/btn_term_can"
            android:text="확인" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>